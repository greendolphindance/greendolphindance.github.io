<!DOCTYPE html>
<html>

<head>
    <title>
        <%= page.title %>
    </title>
</head>

<body>
    <div class="container">
        <div class="post-wrap">
            <h2 class="post-title">
                <%= page.title %>
            </h2>
            <div class="timeline">
                <% const timelineData=getYaml('source/_data/timeline.yml'); %>
                    <% if (timelineData.timeline && timelineData.timeline.length> 0) { %>
                        <% timelineData.timeline.forEach(function(item) { %>
                            <div class="timeline-item">
                                <div class="timeline-date">
                                    <%= item.date %>
                                </div>
                                <div class="timeline-content">
                                    <% if (item.image) { %>
                                        <img src="<%= item.image %>" alt="Timeline Image"
                                            style="max-width: 400px; width: 70vw; height: auto;">
                                        <% } %>
                                            <% if (item.type==='blog_post' ) { %>
                                                <% if (item.link) { %>
                                                    <p>
                                                        <a href="<%= item.link %>">
                                                            <%= item.description %>
                                                        </a>
                                                    </p>
                                                    <% } else { %>
                                                        <p>
                                                            <%= item.description %>
                                                        </p>
                                                        <% } %>
                                                            <% } else if (item.type==='personal_status' ) { %>
                                                                <p>
                                                                    <%= item.description %>
                                                                </p>
                                                                <% } else if (item.type==='blog_renovation' ) { %>
                                                                    <p>
                                                                        <%= item.description %>
                                                                    </p>
                                                                    <% } %>
                                </div>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <p>暂无内容</p>
                                    <% } %>
            </div>
        </div>
    </div>
</body>

</html>